<%- include("topbottom/header") -%>

<% if(dataBlock.exInfo != null) { %>
<p>
  <!-- <a href="#" class="badge badge-primary">Primary</a> -->
  <a class="btn btn-primary btn-sm" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
    Info
  </a>
</p>
<div class="collapse" id="collapseExample">
  <div class="card card-body">
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <% if(dataBlock.exHeader.h1 !== "") { %>
          <th scope="col">
            <%= dataBlock.exHeader.h1 %>
          </th>
          <% } %>
          <% if(dataBlock.exHeader.h2 !== "" ) { %>
          <th scope="col">
            <%= dataBlock.exHeader.h2 %>
          </th>
          <% } %>
          <% if(dataBlock.exHeader.h3 !== "" ) { %>
          <th scope="col">
            <%= dataBlock.exHeader.h3 %>
          </th>
          <% } %>
          <% if(dataBlock.exHeader.h4 !== "" ) { %>
          <th scope="col">
            <%= dataBlock.exHeader.h4 %>
          </th>
          <% } %>
          <% if(dataBlock.exHeader.h5 !== "" ) { %>
          <th scope="col">
            <%= dataBlock.exHeader.h5 %>
          </th>
          <% } %>
          <% if(dataBlock.exHeader.h6 != "" ) { %>
          <th scope="col">
            <%= dataBlock.exHeader.h6 %>
          </th>
          <% } %>
        </tr>
      </thead>
      <tbody>
        <% if(dataBlock.exInfo != null)
          { %>
        <% dataBlock.exInfo.forEach(function(i)
           { %>
        <tr>
          <td>
            <%= i.c1 %>
          </td>
          <td>
            <%= i.c2 %>
          </td>
          <td>
            <%= i.c3 %>
          </td>
          <td>
            <%= i.c4 %>
          </td>
        </tr>
        <% });
          } %>
      </tbody>
    </table>
  </div>
</div>
<% } %>

<main role="main">

  <div class="container">
    <div class="row">
      <div class="col-8">
        <h1>
          <%= dataBlock.b1Title %>
        </h1>
      </div>
      <!-- <div class="col-sm">

      </div> -->
      <div class="col-4">
        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-center">
            <% if(dataBlock.b1Pageination == -1) { %>
            <li class="page-item disabled">
              <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
            </li>
            <% } else { %>
            <li class="page-item">
              <a class="page-link" href="/display/1-Prev" tabindex="-1" aria-disabled="false">Previous</a>
            </li>
            <% } %>

            <% for(var i = 0; i < dataBlock.b1Total; i++)
            { %>
            <li class="page-item"><a class="page-link" href=<%="/display/1." + (i + 1) %>>
                <%= i + 1 %></a></li>
            <% } %>

            <% if(dataBlock.b1Pageination == 1) { %>
            <li class="page-item disabled">
              <a class="page-link" href="#" aria-disabled="true">Next</a>
            </li>
            <% } else { %>
            <li class="page-item">
              <a class="page-link" href="/display/1-Next" aria-disabled="false">Next</a>
            </li>
            <% } %>
          </ul>
        </nav>
      </div>
    </div>
  </div>

  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">ItemID</th>
        <th scope="col">QtyOrdered</th>
        <th scope="col">QtyReceived</th>
        <th scope="col">QtyRemaining</th>
      </tr>
    </thead>
    <tbody>
      <% if(dataBlock.b1Info != null)
          { %>
      <% dataBlock.b1Info.forEach(function(i)
           { %>
      <tr>
        <% if(i.c1 != "" ) { %>
        <td>
          <%= i.c1 %>
        </td>
        <% } %>
        <% if(i.c2 != "" ) { %>
        <td>
          <%= i.c2 %>
        </td>
        <% } %>
        <% if(i.c3 != "" ) { %>
        <td>
